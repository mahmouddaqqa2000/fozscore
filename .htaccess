RewriteEngine On
RewriteBase /

# منع عرض محتويات المجلدات
Options -Indexes

# تحويل الروابط العربية إلى ملفات PHP
RewriteRule ^الأخبار/?$ news.php [L]
RewriteRule ^الفرق/?$ teams.php [L]
RewriteRule ^الدوريات/?$ leagues.php [L]
RewriteRule ^مباريات-الغد/?$ tomorrow.php [L]
RewriteRule ^مباريات-الامس/?$ yesterday.php [L]
RewriteRule ^اتصل-بنا/?$ contact.php [L]

# تحويل روابط المباريات والأخبار (مثال: /مباراة/123-الاهلي-ضد-الزمالك)
RewriteRule ^مباراة/([0-9]+)(?:-.*)?$ view_match.php?id=$1 [L,QSA]
RewriteRule ^خبر/([0-9]+)(?:-.*)?$ view_news.php?id=$1 [L,QSA]